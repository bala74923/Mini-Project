<script>
    const openInputBox = ()=>{
        document.getElementById("changeNameBox").innerHTML='<input type="text"><button onclick="changeName()">Submit</button>';
    }
    const changeName=()=>{
        const xhttp = new XMLHttpRequest();
        xhttp.onload = function() {
            document.getElementById("userName").innerText =this.responseText;
        }
        let oldName = document.getElementById('userName'), newName;
    
        xhttp.open("GET", "server.js?uname=oldName&newName=newName");
        xhttp.send();
    }
</script>
