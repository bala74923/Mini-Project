
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style">
    <title>EventLists</title>
</head>
<body>
    <!-- NavBarStart -->
    <header>
        <nav class="logo-title">
            <a href="/">
                <img src="/image" alt="logo" class="logo">
                <h1 id="page-title">AcTrak</h1>
            </a>
        </nav>
    </header>   
    <hr>
    <!-- NavBarEnd -->

    <!-- Show Event Details -->
    <% for(let i=0; i < eventdetails.length; i++) { %>
        <h3 class="centerLink">Event <%= i+1%> </h3>
        <div class="event-box", id="customers">
            <table>
                <tr>
                    <th>title</th>
                    <th><%=eventdetails[i]["_doc"]["title"]%> </th>
                </tr>
                <% for (const det in eventdetails[i]["_doc"]) {%>  
                    <%if(det!="__v" & det!="_id" & det!="title"){%> 
                    <tr>
                        <td id="event-details-attributes"><%=det%> </td>
                        <td> <%=eventdetails[i]["_doc"][det]%> </td>
                    </tr>
                    <%}%>
                <%}%>
            </table>
            <hr>
        </div>
    <% } %>

    <!-- No Event Details -->
    <%if(eventdetails.length==0){%>
        <h1>No upcoming events</h1>
    <% } %>
</body>
</html>


