    <%= messages.error %>
  <% } %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/views/index2.css">
    <title>AcTrak</title>
    <style>
                @import url('https://fonts.googleapis.com/css2?family=Comic+Neue:wght@300&display=swap');

        *{
            box-sizing: border-box;
            padding: 0px 5px;
            margin: 0px;
        }

        .logo{
            width: 100px;
        }

        header{
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .nav-links{
            display: flex;
        }

        .list li{
            list-style: none;
            display: inline-block;
        }

        a{
            text-decoration: none;
        }

        .logo-title{
            display: flex;
            align-items: center;
            padding: 0px;
        }

        #page-title{
            font-family: 'Comic Neue', cursive;
            font-weight: 400px;
        }

        .student-login{
            position: justify;
            color: #EFF6FB;
            padding: 1rem;
            position: absolute;
            right:55px;
            top: 25px;
            filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
            background-color: #3A5AFF;
            border-radius: 5px;
        }
        .student-login a{
            
            align-items: ceter;
            color: #EFF6FB;
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 700;
            font-size: 16px;
        }
        .org-login{
            position: justify;
            padding: 1rem;
            position: absolute;
            left:850px;
            top:25px;
            border-radius: 5px;
        }

        .login-title{
            font-family: 'Montserrat';
            font-style: normal;
            font-weight: 700;
            font-size: 36px;
            line-height: 44px;
            text-align: center;
            color: #000000;
        }

        .login-form{
            margin: 4rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0px;
        }

        .submit-btn{
            margin: 2rem;
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
            padding: 16px 32px;
            background: #3A5AFE;
            border-radius: 8px;
            color: white;
        }


        .logo-title{

            display: inline-block ;
        }

    </style>
</head>
<body>
    <header>
        <nav class="logo-title">
            <a href="index.html">
                <img src="./Assets/logo.png" alt="logo" class="logo">
                <h1 id="page-title">AcTrak</h1>
            </a>
        </nav>
    </header>
    <div class="login-box">
        <h1 class="login-title">Student/Faculty Login</h1>
        <form action="/login" method="POST" class="login-form">
            <label for="email">email:</label><br>
            <input type="text" id="email" name="email" required>
            <br>

            <label for="password">Password:</label><br>
            <input type="password" id="password" name="password" required>

            <input type="submit" value="Submit" class="submit-btn">
        </form>
    </div>
</body>
</html>
<a href="/register">Register</a>